.important-video
	display flex
	flex-direction column
	flex-wrap nowrap
	justify-content center
	align-items center

	&__video
		display block

	&__wrapper
		border 3px solid #9E9E9E
		border-radius 10px
		padding 40px
		background rgba(0, 0, 0, 0.8)

		+below(2)
			padding 0
	&__video
		width 700px
		height 315px

		+below(3)
			width 500px

		+below(2)
			width 300px

.video-header
	display flex
	flex-direction row
	flex-wrap nowrap
	justify-content center
	align-items stretch
	margin-bottom 30px
	width 41%

	+below(5)
		width 57%

	+below(3)
		width 74%
	+below(2)
		flex-direction column

	&__mark
		position relative
		background #93b658
		//border 4px solid #93b658
		padding 20px
		font-weight 500
		align-self center
		border dashed 2px #2d2d2d
		border-radius 5px
		font-weight bold
		+below(2)
			margin 0 0 15px 0

		&::after, ::before
			left 100%
			top 134%
			border solid transparent
			content " "
			height 0
			width 0
			position absolute
			pointer-events none

		&::after
			border-color rgba(255, 193, 36, 0)
			border-left-color #93b658
			border-width 29px
			margin-top -76px

		&::before
			border-color rgba(251, 176, 0, 0)
			border-left-color #93b658
			border-width 56px
			margin-top -56px

	&__caption
		align-self center
		margin 0 0 0 40px
		font-size 24px
		text-align center
